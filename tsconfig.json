{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016", "WebWorker"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./out/server",
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true, 
    "skipLibCheck": true
  },
  "include": [ "src", "test" ],
  "exclude": ["node_modules", "out"]
}
