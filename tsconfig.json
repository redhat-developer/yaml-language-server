{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "WebWorker"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib/cjs",
    "sourceMap": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}